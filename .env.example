# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/wb_automation
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=wb_automation

# Redis
REDIS_URL=redis://localhost:6379

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Google Vertex AI
GOOGLE_VERTEX_AI_PROJECT=your-project-id
GOOGLE_VERTEX_AI_LOCATION=us-central1

# Wildberries API
WB_API_KEY=your-wb-api-key

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Application
NODE_ENV=production
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_TELEMETRY_DISABLED=1

# Optional: OpenAI (if using OpenAI instead of Vertex AI)
OPENAI_API_KEY=your-openai-key
