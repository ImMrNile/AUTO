generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id               String     @id @default(cuid())
  email            String     @unique
  name             String?
  avatarUrl        String?
  role             UserRole   @default(USER)
  isActive         Boolean    @default(true)
  supabaseId       String     @unique
  balance          Float      @default(0) // Баланс пользователя в рублях
  lastLoginAt      DateTime?
  emailVerified    DateTime?
  // Telegram OAuth данные
  telegramId       String?    @unique // Telegram User ID
  telegramUsername String?    // Telegram username
  telegramPhotoUrl String?    // Telegram profile photo
  telegramAuthDate DateTime?  // Дата последней авторизации через Telegram
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt
  products         Product[]
  cabinets         Cabinet[]
  sessions         Session[]
  apiKeys          ApiKey[]
  auditLogs        AuditLog[]
  creationTasks    ProductCreationTask[]
  telegramSessions TelegramSession[]
  promotions       ProductPromotion[]
  aiChats          ProductAiChat[]

  @@index([email])
  @@index([supabaseId])
  @@index([telegramId])
  @@map("users")
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  ipAddress String?
  userAgent String?
  expiresAt DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
  @@map("sessions")
}

model ApiKey {
  id          String    @id @default(cuid())
  userId      String
  name        String
  key         String    @unique
  lastUsedAt  DateTime?
  expiresAt   DateTime?
  isActive    Boolean   @default(true)
  permissions Json
  createdAt   DateTime  @default(now())
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([key])
  @@map("api_keys")
}

model AuditLog {
  id         String   @id @default(cuid())
  userId     String?
  action     String
  entityType String
  entityId   String?
  details    Json?
  ipAddress  String?
  userAgent  String?
  createdAt  DateTime @default(now())
  user       User?    @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([action])
  @@index([entityType])
  @@index([createdAt])
  @@map("audit_logs")
}

model Product {
  id                  String               @id @default(cuid())
  userId              String
  name                String
  price               Float
  status              String               @default("PENDING")
  originalImage       String?
  referenceUrl        String?
  dimensions          Json?
  workflowId          String?
  processingMethod    String?
  gpt5Metrics         Json?
  generatedName       String?
  seoDescription      String?
  colorAnalysis       String?
  suggestedCategory   String?
  aiCharacteristics   Json?
  wbData              Json?
  errorMessage        String?
  publishedAt         DateTime?
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  subcategoryId       Int?
  
  // WB Product Data
  wbNmId              String?              // Wildberries nmID
  wbImtId             String?              // Wildberries imtID
  vendorCode          String?              // Артикул продавца
  barcode             String?              // Баркод товара (для FBS остатков)
  barcodes            Json?                // Массив всех баркодов (для товаров с размерами)
  brand               String?              // Бренд
  
  // Pricing
  costPrice           Float?               // Себестоимость
  discountPrice       Float?               // Цена со скидкой
  discount            Float?               // Процент скидки
  priceLocked         Boolean              @default(false) // Закрепление цены (защита от автоснижения WB)
  lockedPrice         Float?               // Закрепленная цена
  
  // Stock Information
  stock               Int                  @default(0)  // Остаток на складе (общий)
  fbsStock            Int                  @default(0)  // Остаток на FBS складах
  fbwStock            Int                  @default(0)  // Остаток на FBW складах
  reserved            Int                  @default(0)  // Зарезервировано
  inTransit           Int                  @default(0)  // В пути к клиенту
  inReturn            Int                  @default(0)  // Возвраты
  
  // Sizes and variants
  sizes               Json?                // Размеры и их остатки
  
  // Packaging and Kit
  packaging           String?              // Комплектация товара
  
  // WB Sync
  lastWbSyncAt        DateTime?            // Последняя синхронизация с WB
  wbSyncStatus        String?              // Статус синхронизации
  
  user                User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  productCabinets     ProductCabinet[]
  subcategory         WbSubcategory?       @relation(fields: [subcategoryId], references: [id])
  agentWorkflows      AgentWorkflow[]
  agentExecutions     AgentExecutionLog[]
  characteristics     ProductCharacteristic[]
  infographics        ProductInfographic[]
  infographicRequests InfographicRequest[]
  publications        ProductPublication[]
  creationTasks       ProductCreationTask[]
  analytics           ProductAnalytics?
  optimizations       ProductOptimization[]
  promotions          ProductPromotion[]
  aiChats             ProductAiChat[]

  @@index([userId])
  @@index([status])
  @@index([createdAt])
  @@index([wbNmId])
  @@index([vendorCode])
  @@map("products")
}

model Cabinet {
  id              String               @id @default(cuid())
  userId          String
  name            String
  description     String?
  apiToken        String?
  isActive        Boolean              @default(true)
  sellerId        String?
  shopName        String?
  taxRate         Float?               @default(6) // Налоговая ставка (УСН 6%, 15%, 25% и т.д.)
  createdAt       DateTime             @default(now())
  updatedAt       DateTime             @updatedAt
  user            User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  productCabinets ProductCabinet[]
  publications    ProductPublication[]

  @@unique([userId, name])
  @@index([userId])
  @@map("cabinets")
}

model ProductPublication {
  id            String            @id @default(cuid())
  productId     String
  cabinetId     String
  status        PublicationStatus @default(PENDING)
  wbTaskId      String?
  wbNmId        String?
  wbImtId       String?
  price         Float?
  discountPrice Float?
  publishedAt   DateTime?
  errorMessage  String?
  lastSyncAt    DateTime?
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
  product       Product           @relation(fields: [productId], references: [id], onDelete: Cascade)
  cabinet       Cabinet           @relation(fields: [cabinetId], references: [id], onDelete: Cascade)

  @@unique([productId, cabinetId])
  @@index([productId])
  @@index([cabinetId])
  @@index([status])
  @@map("product_publications")
}

model ProductCabinet {
  id         String   @id @default(cuid())
  productId  String
  cabinetId  String
  isSelected Boolean  @default(true)
  createdAt  DateTime @default(now())
  product    Product? @relation(fields: [productId], references: [id], onDelete: Cascade)
  cabinet    Cabinet  @relation(fields: [cabinetId], references: [id], onDelete: Cascade)

  @@unique([productId, cabinetId])
  @@map("product_cabinets")
}

model WbParentCategory {
  id            Int             @id @default(autoincrement())
  name          String          @unique
  slug          String          @unique
  description   String?
  isActive      Boolean         @default(true)
  sortOrder     Int             @default(0)
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  subcategories WbSubcategory[]

  @@map("wb_parent_categories")
}

model WbSubcategory {
  id                  Int                        @id @default(autoincrement())
  wbSubjectId         Int?
  name                String
  slug                String                     @unique
  parentCategoryId    Int
  commissionFbw       Float                      @default(15.0)
  commissionFbs       Float                      @default(15.0)
  commissionDbs       Float                      @default(15.0)
  commissionCc        Float                      @default(10.0)
  commissionEdbs      Float                      @default(20.0)
  commissionBooking   Float                      @default(10.0)
  description         String?
  keywords            Json?
  isActive            Boolean                    @default(true)
  sortOrder           Int                        @default(0)
  minPrice            Float?
  maxPrice            Float?
  requiresCertificate Boolean                    @default(false)
  ageRestriction      Int?
  createdAt           DateTime                   @default(now())
  updatedAt           DateTime                   @updatedAt
  parentCategory      WbParentCategory           @relation(fields: [parentCategoryId], references: [id], onDelete: Cascade)
  characteristics     WbCategoryCharacteristic[]
  products            Product[]

  @@index([parentCategoryId])
  @@map("wb_subcategories")
}

model WbCategoryCharacteristic {
  id                 Int                     @id @default(autoincrement())
  subcategoryId      Int
  wbCharacteristicId Int?
  name               String
  type               String
  isRequired         Boolean                 @default(false)
  isMultiselect      Boolean                 @default(false)
  maxLength          Int?
  minValue           Float?
  maxValue           Float?
  pattern            String?
  defaultValue       String?
  description        String?
  sortOrder          Int                     @default(0)
  createdAt          DateTime                @default(now())
  updatedAt          DateTime                @updatedAt
  subcategory        WbSubcategory           @relation(fields: [subcategoryId], references: [id], onDelete: Cascade)
  values             WbCharacteristicValue[]
  productCharacteristics ProductCharacteristic[]

  @@index([subcategoryId])
  @@map("wb_category_characteristics")
}

model WbCharacteristicValue {
  id               Int                      @id @default(autoincrement())
  characteristicId Int
  wbValueId        Int?
  value            String
  displayName      String?
  sortOrder        Int                      @default(0)
  isActive         Boolean                  @default(true)
  createdAt        DateTime                 @default(now())
  characteristic   WbCategoryCharacteristic @relation(fields: [characteristicId], references: [id], onDelete: Cascade)

  @@index([characteristicId])
  @@map("wb_characteristic_values")
}

model AgentWorkflow {
  id                   String    @id @default(cuid())
  workflowId           String    @unique
  productId            String?
  systemType           String
  status               String
  currentStage         String
  stageData            Json?
  startedAt            DateTime
  completedAt          DateTime?
  totalDuration        Int?
  apiCallsCount        Int       @default(0)
  tokensUsed           Int       @default(0)
  agent1Result         Json?
  agent2Result         Json?
  agent3Result         Json?
  finalResult          Json?
  overallConfidence    Float?
  qualityScore         Int?
  characteristicsCount Int?
  searchResultsCount   Int?
  errorMessage         String?
  warnings             Json?
  retryCount           Int       @default(0)
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
  product              Product?  @relation(fields: [productId], references: [id], onDelete: SetNull)

  @@index([productId])
  @@index([workflowId])
  @@map("agent_workflows")
}

model AgentExecutionLog {
  id                       String    @id @default(cuid())
  workflowId               String
  productId                String?
  agentName                String
  taskId                   String
  status                   String
  startedAt                DateTime
  completedAt              DateTime?
  duration                 Int?
  inputData                Json?
  apiCalls                 Int       @default(0)
  tokensUsed               Int       @default(0)
  retryCount               Int       @default(0)
  maxMemoryUsed            Int?
  searchCallsUsed          Int?
  success                  Boolean   @default(false)
  result                   Json?
  confidence               Float?
  errorMessage             String?
  errorCode                String?
  imageCount               Int?
  characteristicsGenerated Int?
  validationErrors         Int?
  searchResultsFound       Int?
  sourcesValidated         Int?
  createdAt                DateTime  @default(now())
  product                  Product?  @relation(fields: [productId], references: [id], onDelete: SetNull)

  @@index([workflowId, agentName])
  @@index([productId])
  @@index([createdAt])
  @@index([status, agentName])
  @@map("agent_execution_logs")
}


model ProductCharacteristic {
  id                    String              @id @default(cuid())
  productId             String
  characteristicId      Int?
  wbCharacteristicId    Int?
  name                  String
  value                 String?
  originalValue         String?
  confidence            Float?
  source                String?
  validationStatus      String?
  validationNotes       String?
  isRequired            Boolean             @default(false)
  isUserEdited          Boolean             @default(false)
  editedAt              DateTime?
  editedBy              String?
  metadata              Json?
  createdAt             DateTime            @default(now())
  updatedAt             DateTime            @updatedAt
  product               Product             @relation(fields: [productId], references: [id], onDelete: Cascade)
  wbCharacteristic      WbCategoryCharacteristic? @relation(fields: [characteristicId], references: [id], onDelete: SetNull)

  @@unique([productId, characteristicId])
  @@index([productId])
  @@index([characteristicId])
  @@index([confidence])
  @@index([validationStatus])
  @@map("product_characteristics")
}

model ProductInfographic {
  id                 String              @id @default(cuid())
  productId          String
  infographicType    String
  imageUrl           String
  thumbnailUrl       String?
  sourceProductImage String
  informationFocus   String
  qualityMetrics     Json
  generationPrompt   String
  brandColors        Json?
  iterationsCount    Int                 @default(1)
  width              Int                 @default(900)
  height             Int                 @default(1200)
  fileSize           Int?
  mimeType           String              @default("image/png")
  status             String              @default("ACTIVE")
  isApproved         Boolean             @default(false)
  approvedAt         DateTime?
  approvedBy         String?
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  requestId          String?
  product            Product             @relation(fields: [productId], references: [id], onDelete: Cascade)
  request            InfographicRequest? @relation(fields: [requestId], references: [id])

  @@index([productId])
  @@index([status])
  @@index([infographicType])
  @@map("product_infographics")
}

model InfographicRequest {
  id                 String               @id @default(cuid())
  productId          String
  status             String
  additionalImages   Json
  competitorRefs     Json?
  competitorUrls     Json?
  brandColors        Json?
  customInstructions String?
  totalInfographics  Int                  @default(0)
  successfulCount    Int                  @default(0)
  failedCount        Int                  @default(0)
  processingTime     Int?
  averageQuality     Float?
  totalCost          Float?
  agentLogs          Json?
  errorMessage       String?
  errorCode          String?
  startedAt          DateTime             @default(now())
  completedAt        DateTime?
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
  product            Product              @relation(fields: [productId], references: [id], onDelete: Cascade)
  infographics       ProductInfographic[]

  @@index([productId])
  @@index([status])
  @@index([startedAt])
  @@map("infographic_requests")
}

model WbApiCache {
  id        Int      @id @default(autoincrement())
  cacheKey  String   @unique
  data      Json
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([expiresAt])
  @@map("wb_api_cache")
}

model WbCategorySyncLog {
  id               Int       @id @default(autoincrement())
  syncType         String
  status           String
  recordsProcessed Int       @default(0)
  recordsUpdated   Int       @default(0)
  recordsCreated   Int       @default(0)
  errorMessage     String?
  startedAt        DateTime  @default(now())
  completedAt      DateTime?

  @@map("wb_category_sync_logs")
}

enum UserRole {
  USER
  ADMIN
  SUPER_ADMIN
}

enum PublicationStatus {
  PENDING
  QUEUED
  PUBLISHING
  PUBLISHED
  FAILED
  UNPUBLISHED
}

model ProductCreationTask {
  id            String                @id @default(cuid())
  userId        String
  productId     String?
  productName   String
  status        ProductCreationStatus @default(CREATING)
  progress      Int                   @default(0)
  currentStage  String?
  errorMessage  String?
  metadata      Json?
  createdAt     DateTime              @default(now())
  updatedAt     DateTime              @updatedAt
  completedAt   DateTime?
  user          User                  @relation(fields: [userId], references: [id], onDelete: Cascade)
  product       Product?              @relation(fields: [productId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([status])
  @@index([createdAt])
  @@index([userId, createdAt(sort: Desc), status]) // Оптимальный индекс для SSE
  @@map("product_creation_tasks")
}

enum ProductCreationStatus {
  CREATING
  ANALYZING
  PUBLISHING
  COMPLETED
  ERROR
}

model ProductAnalytics {
  id                String   @id @default(cuid())
  productId         String   @unique
  nmId              String?  // Wildberries nmID
  
  // Конверсия
  views             Int      @default(0)  // Просмотры
  addToCart         Int      @default(0)  // Добавлений в корзину
  orders            Int      @default(0)  // Заказы
  ctr               Float    @default(0)  // CTR (%)
  conversionRate    Float    @default(0)  // Конверсия корзина -> заказ (%)
  
  // Поисковые запросы (топ-10)
  topSearchQueries  Json?    // [{query: string, openCard: number, addToCart: number, orders: number, avgPosition: number}]
  totalQueries      Int      @default(0)  // Общее количество запросов
  
  // Продажи (за последние 30 дней)
  revenue           Float    @default(0)  // Выручка
  units             Int      @default(0)  // Проданных единиц
  avgOrderValue     Float    @default(0)  // Средний чек
  
  // Метаданные синхронизации
  lastSyncAt        DateTime @default(now())
  syncStatus        String   @default("pending") // pending, syncing, success, error
  syncError         String?
  dataSource        String   @default("wb_api") // wb_api, manual, estimated
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  product           Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  @@index([productId])
  @@index([nmId])
  @@index([lastSyncAt])
  @@index([syncStatus])
  @@map("product_analytics")
}

model TelegramSession {
  id            String   @id @default(cuid())
  sessionId     String   @unique
  userId        String?
  token         String?  // Session token для авторизации
  authenticated Boolean  @default(false)
  expiresAt     DateTime
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  user          User?    @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([sessionId])
  @@index([userId])
  @@index([expiresAt])
  @@map("telegram_sessions")
}

model ProductOptimization {
  id                    String   @id @default(cuid())
  productId             String
  goldenKeywords        String   // JSON: [{phrase, cpc, orders, roi}]
  unprofitableKeywords  String   // JSON: [{phrase, cpc, orders, roi}]
  promisingKeywords     String   // JSON: [{phrase, position, cpc, orders}]
  cardOptimizations     String   // JSON: [{type, description, expectedImpact}]
  expectedSalesIncrease Float    // Прогноз увеличения продаж (%)
  expectedROIIncrease   Float    // Прогноз увеличения ROI (%)
  createdAt             DateTime @default(now())
  
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  @@index([productId])
  @@index([createdAt])
  @@map("product_optimizations")
}

model ProductPromotion {
  id                 String   @id @default(cuid())
  productId          String
  userId             String
  status             String   @default("ACTIVE") // ACTIVE, PAUSED, COMPLETED
  startDate          DateTime
  endDate            DateTime
  checkInterval      Int      @default(4) // Часы между проверками
  
  // Метрики начальные
  initialSales       Int      @default(0)
  initialConversion  Float    @default(0)
  initialCTR         Float    @default(0)
  initialROAS        Float    @default(0)
  
  // Метрики текущие
  currentSales       Int      @default(0)
  currentConversion  Float    @default(0)
  currentCTR         Float    @default(0)
  currentROAS        Float    @default(0)
  
  // Счетчики
  checksPerformed    Int      @default(0)
  actionsApplied     Int      @default(0)
  
  // AI поля
  aiThreadId         String?  // ID Thread в OpenAI Assistants API
  aiEnabled          Boolean  @default(false) // Включено ли автоматическое управление AI
  lastAiCheckAt      DateTime? // Время последней проверки AI
  
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  
  product            Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  reports            PromotionReport[]
  actions            PromotionAction[]
  decisions          PromotionDecision[]
  actionLogs         PromotionActionLog[]
  
  @@index([productId])
  @@index([userId])
  @@index([status])
  @@index([aiEnabled, status])
  @@map("product_promotions")
}

model PromotionReport {
  id              String   @id @default(cuid())
  promotionId     String
  
  // Данные на момент проверки
  sales           Int      @default(0)
  conversion      Float    @default(0)
  ctr             Float    @default(0)
  roas            Float    @default(0)
  adSpend         Float    @default(0)
  
  // Анализ от GPT
  diagnosis       String   @db.Text
  improvements    String   @db.Text // JSON
  recommendations String   @db.Text // JSON
  
  createdAt       DateTime @default(now())
  
  promotion       ProductPromotion @relation(fields: [promotionId], references: [id], onDelete: Cascade)
  
  @@index([promotionId])
  @@map("promotion_reports")
}

model PromotionAction {
  id          String   @id @default(cuid())
  promotionId String
  
  // Тип действия
  type        String   // BID_INCREASE, BID_DECREASE, ADD_KEYWORD, ADD_MINUS_WORD, UPDATE_TITLE, etc.
  
  // Детали
  details     String   @db.Text // JSON
  
  // Результат
  applied     Boolean  @default(false)
  result      String?  @db.Text
  error       String?  @db.Text
  
  createdAt   DateTime @default(now())
  
  promotion   ProductPromotion @relation(fields: [promotionId], references: [id], onDelete: Cascade)
  
  @@index([promotionId])
  @@index([type])
  @@map("promotion_actions")
}

model PromotionDecision {
  id          String    @id @default(cuid())
  promotionId String
  diagnosis   String    @db.Text
  actions     Json
  forecast    Json?
  executed    Boolean   @default(false)
  executedAt  DateTime?
  createdAt   DateTime  @default(now())
  
  promotion   ProductPromotion     @relation(fields: [promotionId], references: [id], onDelete: Cascade)
  actionLogs  PromotionActionLog[]
  
  @@index([promotionId, createdAt(sort: Desc)])
  @@map("promotion_decisions")
}

model PromotionActionLog {
  id            String    @id @default(cuid())
  promotionId   String
  decisionId    String?
  actionType    String
  actionDetails Json
  status        String    @default("pending") // pending, success, failed
  result        Json?
  error         String?   @db.Text
  createdAt     DateTime  @default(now())
  executedAt    DateTime?
  
  promotion     ProductPromotion  @relation(fields: [promotionId], references: [id], onDelete: Cascade)
  decision      PromotionDecision? @relation(fields: [decisionId], references: [id], onDelete: SetNull)
  
  @@index([promotionId, createdAt(sort: Desc)])
  @@index([status])
  @@map("promotion_action_logs")
}

model ProductAiChat {
  id                    String   @id @default(cuid())
  productId             String
  userId                String
  aiThreadId            String?  // ID Thread в OpenAI Assistants API
  aiAssistantId         String   // ID Assistant (promotion или content)
  chatType              String   // "promotion" | "content"
  
  // Метаданные чата
  title                 String   // Название чата (например, "Оптимизация продвижения")
  status                String   @default("ACTIVE") // ACTIVE, PAUSED, COMPLETED
  lastMessageAt         DateTime?
  
  // Настройки бюджета и оптимизации
  dailyBudget           Float    @default(0) // Дневной бюджет на продвижение
  weeklyBudget          Float    @default(0) // Недельный бюджет на продвижение
  startDate             DateTime // Дата начала оптимизации
  endDate               DateTime // Дата окончания оптимизации
  
  // Метрики эффективности
  totalSpent            Float    @default(0) // Всего потрачено на продвижение
  totalRevenue          Float    @default(0) // Всего заработано за период
  roi                   Float?   // ROI оптимизации
  
  // Связи
  product               Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages              ProductAiMessage[]
  
  // Индексы
  @@index([productId])
  @@index([userId])
  @@index([status])
  @@index([chatType])
  @@index([lastMessageAt])
  @@map("product_ai_chats")
}

model ProductAiMessage {
  id            String   @id @default(cuid())
  chatId        String
  role          String   // "user" | "assistant"
  content       String   @db.Text
  metadata      Json?    // Дополнительные данные (действия, рекомендации и т.д.)
  createdAt     DateTime @default(now())
  
  // Связи
  chat          ProductAiChat @relation(fields: [chatId], references: [id], onDelete: Cascade)
  
  // Индексы
  @@index([chatId])
  @@index([createdAt])
  @@map("product_ai_messages")
}
